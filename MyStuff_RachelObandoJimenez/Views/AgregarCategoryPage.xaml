<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyStuff_RachelObandoJimenez.Views.AgregarCategoryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Registro de categorias" FontSize="Large" Padding="70,0,0,20" TextColor="Black">
            </Label>
            <Entry x:Name="TxtCategory" Placeholder="Nombre de la categoria" FontSize="Large" TextColor="Black" PlaceholderColor="#F8F7F7" ClearButtonVisibility="WhileEditing" IsSpellCheckEnabled="False" Keyboard="Email" >

            </Entry>

            <Button x:Name="BtnRegistar" Text="Registrar" FontSize="Large"  BackgroundColor="#C61BAF" CornerRadius="60" Clicked="BtnRegistar_Clicked">

            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>